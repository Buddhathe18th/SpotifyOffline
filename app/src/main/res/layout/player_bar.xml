<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/windowBackground">

    <!-- Progress bar -->
    <SeekBar
        android:id="@+id/seekBarProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:paddingTop="0dp"
        android:paddingBottom="4dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- Time labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textCurrentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:00"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <!-- Song title and scan button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageAlbumArt"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="Album art" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nowPlayingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nothing playing"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nowPlayingArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonViewQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Queue" />
    </LinearLayout>

    <!-- Playback controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="4dp">

        <ImageButton
            android:id="@+id/buttonShuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_alphabetically"
            android:contentDescription="Shuffle"
            android:alpha="0.5" />

        <ImageButton
            android:id="@+id/buttonPrevious"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Previous"
            android:enabled="false"
            android:alpha="0.5" />

        <ImageButton
            android:id="@+id/buttonPlayPause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Play/Pause"
            android:enabled="false" />

        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Next"
            android:enabled="false"
            android:alpha="0.5" />

        <ImageButton
            android:id="@+id/buttonRepeat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_rotate"
            android:contentDescription="Repeat"
            android:alpha="0.5" />
    </LinearLayout>
</LinearLayout>
